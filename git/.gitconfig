[user]
    name = Sergi Castro
    email = sergikstro@gmail.com

[core]
    editor = vim
    ; pager = more
    pager = less -rFXnME
    excludesfile = ~/.gitignore

[color]
    status = auto
    interactive = auto
    diff = auto
    branch = auto
    ui = auto

[alias]
    st = status
    ci = commit
    co = checkout
    pl = pull
    ps = push
    pr = pull --rebase
    br = branch
    lg = log --graph
    ll = log --graph --oneline

[apply]
    whitespace = nowarn

[format]
    pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[push]
    default = matching
